<br>
  <div class="container">
    <div>
      <div class="row justify-center">
        <% if @lifeguard.photo.nil? %>
          <%= image_tag @lifeguard.avatar, class: "avatar-normal" %>
          <% else %>
          <%= cl_image_tag(@lifeguard.photo.key, crop: :thumb, gravity: :face, class: "avatar-normal") %>
        <% end %>

      </div>
      <div class="row justify-center">
        <h2><%= @lifeguard.full_name %></h2>
      </div>
    </div>
    <br>
    <br>

    <div>
      <h2><b>Contact:</b></h2>
      <h3><%= @lifeguard.email %></h3>
      <h3><%= @lifeguard.mobile %></h3>
    </div>
    <% if policy(@lifeguard).edit? %>
        <div>
          <h2><b>Diplôme:</b></h2>
          <h3>BNSSA ? <%= @lifeguard.bnssa? %></h3>
          <h3>PSE 1 ? <%= @lifeguard.pse1? %></h3>
          <h3>PSE 2?<%= @lifeguard.pse2? %></h3>
        </div>
      <div>
        <br>
        <br>
        <h2><b>Disponibilités:</b></h2>
      </div>
    <% end %>

      <div >
    <% if policy(@lifeguard).edit? %>
        <%= link_to raw('<button type="button" class="btn btn-secondary">Modifier les informations</button>'), edit_user_path(@lifeguard) %>
        <%= link_to raw('<button type="button" class="btn btn-secondary">Modifier mot de passe</button>'), edit_user_registration_path(@lifeguard) %>
    <% end %>
        <% if policy(@lifeguard).destroy? %>
           <%= link_to raw('<button type="button" class="btn btn-danger">Supprimer le profil</button>'), user_path(@lifeguard), method: :delete %>
      <% end %>
    </div>
  </div>
<br>

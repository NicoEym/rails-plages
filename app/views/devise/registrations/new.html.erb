<div class="banner center-form" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1569934556710-2da1a9a5d510?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60);">
  <div class="log-form  overflow col-xs-12 col-md-4">
    <h2>S'inscrire</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :firstname,
                  required: true,
                  autofocus: true,
                  label: "Prénom:"%>
      <%= f.input :lastname,
                  required: true,
                  autofocus: true,
                  label: "Nom:" %>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :password,
                  label: "Mot de passe",
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  label: "Confirmer mot de passe",
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :mobile,
                  required: true,
                  autofocus: true,
                  label: "Téléphone portable:" %>
      <%= f.input :photo, as: :file, label: "Photo de profil:" %>
      <%= f.input :bnssa, as: :boolean, checked_value: true, unchecked_value: false, label: "J'ai mon BNSSA ?" %>
      <%= f.input :pse1, as: :boolean, checked_value: true, unchecked_value: false, label: "J'ai mon PSE1 ?" %>
      <%= f.input :pse2, as: :boolean, checked_value: true, unchecked_value: false, label: "J'ai mon PSE2 ?" %>

      <% for i in 0..@number_of_days %>
        <%= f.fields_for :availabilities, @lifeguard.availabilities[i] do |ff| %>
          <%= ff.input :available, as: :radio_buttons, prompt: "Choisir", required: true, input_html: { autocomplete: "Perfil"}, label: "Je suis dispo pour travailler le #{@lifeguard.availabilities[i].calendar.day.strftime('%d-%m-%Y')}?" %>
        <% end %>
      <% end %>
    </div>

    <div class="form-actions">
      <%= button_tag(type: 'submit', class: "btn-outline") do %>
             S'inscrire
      <% end %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>

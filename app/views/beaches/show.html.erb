<br>
  <div class="container">
    <div class="text-center">
      <h1>Plage <%= @beach.name%></h1>

      <p>Commune: <%= @beach.address%></p>
      <p><%= @beach.number_of_team_members %> sauveteurs</p>

    </div>


      <div id="map"
       style="width: 100%; height: 600px;"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>

          <div class="button-box">
       <% if policy(@beach).edit? %>
        <%= link_to raw('<button type="button" class="btn btn-secondary">Modifier cette plage</button>'), edit_beach_path(@beach) %>
      <% end %>
      <% if policy(@beach).destroy? %>
         <%= link_to raw('<button type="button" class="btn btn-danger">Supprimer la plage</button>'), beach_path(@beach),method: :delete %>
      <% end %>
    </div>


  </div>

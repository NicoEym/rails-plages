<div class="row">
  <% @beaches.each do |beach| %>
    <div class="col-xs-12 col-md-4">
      <div class="card-beach" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%=beach.photo_url%>);">
        <%= link_to("", beach_path(beach.id), class:"card-link")  %>
         <div>
          <h2 class="text-center"><%= beach.name %> </h2>
        </div>
      </div>
    </div>
  <% end %>

</div>

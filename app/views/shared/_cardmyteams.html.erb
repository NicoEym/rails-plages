<div class="row">
  <% @dates.each do |date| %>
    <% teams = date.teams %>
    <% team = teams.with(current_user) %>
    <% unless team.nil? %>
    <div class="col-xs-12 col-md-12">
      <div class="card-team">
        <div class="card-team-beach-image" style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.4)), url(<%= team.beach.photo_url%>);">
        </div>
        <div class="card-team-infos">
          <div class="card-title space_between width100 padding1">
            <h2>Plage <%= team.beach.name%> - <%= team.calendar.day.strftime("%d-%m-%Y")%></h2>
          </div>
          <div class="card-lifeguards flex width100 padding1 horizontal-scroll">
            <% head_lifeguard = team.head %>
            <%= link_to user_path(head_lifeguard.user.id) do %>
              <div class="lifeguard-profile">
                <%= cl_image_tag head_lifeguard.user.photo, class: "avatar-large" %>
                <%= head_lifeguard.user.full_name %>
              </div>
            <% end %>

            <% team.lifeguards.each do |lifeguard| %>
              <%= link_to user_path(lifeguard.user.id) do %>
                <div class="lifeguard-profile">
                  <%= cl_image_tag lifeguard.user.photo, class: "avatar-large" %>
                  <%= lifeguard.user.full_name %>
                </div>
              <% end%>
            <% end%>
          </div>
        </div>
       </div>
    </div>
    <% else %>
      <div class="col-xs-12 col-md-12">
        <div class="card-team">
          <div class="card-team-beach-image" style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.4)), url('https://images.unsplash.com/photo-1570786240066-c0d753711cfe?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60');">
          </div>
          <div class="card-team-infos">
          <div class="card-title space_between width100 padding1">
            <h2>Repos - <%= team.calendar.day.strftime("%d-%m-%Y")%></h2>
          </div>
          <div class="card-lifeguards flex width100 padding1 horizontal-scroll">
          </div>
        </div>
       </div>
      </div>
    <% end %>
  <% end %>
</div>

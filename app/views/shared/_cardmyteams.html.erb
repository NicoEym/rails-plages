<div class="row">
  <% @user_program_for_the_next_7_days.each do |this_day_program| %>
    <% if this_day_program[:program] == "Working" %>
      <div class="col-xs-12 col-md-12">
        <div class="card-team">
          <div class="card-team-beach-image" style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.4)), url(<%= this_day_program[:team].beach.photo_url%>);">
          </div>
          <div class="card-team-infos">
            <div class="card-title space_between width100 padding1">
              <h2>Plage <%= this_day_program[:team].beach.name %> - <%= this_day_program[:date].day.strftime("%d-%m-%Y") %></h2>
            </div>
            <div class="card-lifeguards flex width100 padding1 horizontal-scroll">
              <% head_lifeguard = this_day_program[:team].head.first %>
              <%= link_to user_path(head_lifeguard.user.id) do %>
                <div class="lifeguard-profile">
                  <% if head_lifeguard.user.photo.attached? %>
                    <%= cl_image_tag head_lifeguard.user.photo, class: "avatar-large" %>
                  <% else %>
                    <%= image_tag head_lifeguard.user.avatar_url, class: "avatar-large" %>
                  <% end %>
                  <%= head_lifeguard.user.full_name %>
                </div>
              <% end %>
              <% this_day_program[:team].lifeguards.each do |lifeguard| %>
                <%= link_to user_path(lifeguard.user.id) do %>
                  <div class="lifeguard-profile">
                    <% if lifeguard.user.photo.attached? %>
                        <%= cl_image_tag lifeguard.user.photo, class: "avatar-large" %>
                    <% else %>
                        <%= image_tag lifeguard.user.avatar_url, class: "avatar-large" %>
                    <% end %>
                    <%= lifeguard.user.full_name %>
                  </div>
                <% end%>
              <% end%>
            </div>
          </div>
         </div>
      </div>
      <% elsif this_day_program[:program] == "Rest"  %>





          <div class="col-xs-12 col-md-12">
            <div class="card-team">
              <div class="card-team-beach-image" style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.4)), url('https://images.unsplash.com/photo-1541781774459-bb2af2f05b55?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60');">
              </div>
              <div class="card-team-infos">
              <div class="card-title space_between width100 padding1">
                <h2>Vous êtes en repos le <%= this_day_program[:date].day.strftime("%d-%m-%Y")%></h2>
              </div>
              <div class="card-lifeguards flex width100 padding1 horizontal-scroll">
              </div>
            </div>
           </div>
          </div>
          <% elsif this_day_program[:program] == "Planning not created for this day" %>
            <div class="col-xs-12 col-md-12">
            <div class="card-team">
              <div class="card-team-beach-image" style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.4)), url('https://images.unsplash.com/photo-1499377193864-82682aefed04?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60');">
              </div>
              <div class="card-team-infos">
              <div class="card-title space_between width100 padding1">
                <h2>Le planning n'a pas encore été créé pour le <%= this_day_program[:date].day.strftime("%d-%m-%Y")%></h2>
              </div>
              <div class="card-lifeguards flex width100 padding1 horizontal-scroll">
              </div>
            </div>
           </div>
          </div>

    <% end %>
  <% end %>
</div>

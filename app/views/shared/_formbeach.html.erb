<div class="log-form col-xs-12 col-md-4">
  <% if current_page?(controller: 'beaches', action: 'new')  %>
    <h2>Cr√©er une nouvelle plage</h2>
  <% else %>
    <h2>Modifier la plage <%= @beach.name%></h2>
  <% end %>


    <%= simple_form_for [@beach]  do |f| %>
      <%= f.input :name, label: 'Nom de la plage:'%>
      <%= f.input :address, label: "Commune:" %>
      <%= f.input :latitude, label: "Latitude:" %>
      <%= f.input :longitude, label: "Longitude:" %>
      <%= f.input :number_of_team_members, collection: [2, 3, 4, 5], label: 'Nombre de sauveteurs:'%>
      <%= f.input :photo_url, label: "Photo:" %>

      <%= f.submit "Valider la plage", class: "btn btn-lg btn-primary blue-nav col-xs-9 col-md-4" %>
    <% end %>

</div>

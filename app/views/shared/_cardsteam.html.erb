<div class="row">
  <% @beaches.each do |beach| %>
    <div class="col-xs-12 col-md-12">
      <div class="card-team">
        <div class="card-team-beach-image" style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.4)), url(<%= beach.photo_url%>);">
        </div>
        <div class="card-team-infos">
            <div class="card-title space_between width100 padding1">
              <h2>Plage <%=beach.name%></h2>
              <% team = Team.find_by(calendar: @date, beach: beach) %>
              <div class="card-links">
                <% if team.nil?  %>

                    <%= link_to raw('<i class="fas fa-plus-circle"></i>Créer léquipe'),  new_calendar_beach_team_path(@date, beach, team) %>

                <% else %>
                    <% if policy(team).edit? %>
                      <%= link_to raw('<i class="fas fa-edit"></i>Modifier'),   edit_calendar_beach_team_path(team.calendar, team.beach, team) %>
                     <% end %>
                     <% if policy(team).destroy? %>
                      <%= link_to raw('<i class="fas fa-times-circle"></i>Supprimer'),   calendar_beach_team_path(team.calendar, team.beach, team), method: :delete %>
                      <% end %>
                <% end %>
              </div>
            </div>

          <% unless team.nil? %>
            <div class="card-lifeguards flex width100 padding1 horizontal-scroll">
              <% head_lifeguards = HeadLifeguard.find_by(team: team) %>
              <%= link_to user_path(head_lifeguards.user.id) do %>
                <div class="lifeguard-profile">
                    <%= image_tag(head_lifeguards.user.avatar, class: "avatar-large") %>
                    <p><%= head_lifeguards.user.full_name %></p>
                </div>
              <% end %>
              <% lifeguards = TeamLifeguard.where(team: team) %>
                <% lifeguards.each do |lifeguard| %>
                  <%= link_to user_path(lifeguard.user.id) do %>
                    <div class="lifeguard-profile">
                      <%= image_tag(lifeguard.user.avatar, class: "avatar-large") %>
                      <p><%= lifeguard.user.full_name %></p>
                    </div>
                  <%end %>
              <%end%>
            </div>
          <% end %>
        </div>
       </div>
    </div>
  <% end %>
</div>

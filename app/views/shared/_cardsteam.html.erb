<div class="row">
  <% @beaches.each do |beach| %>
    <div class="col-xs-12 col-md-12">
      <div class="card-beach">
        <div class="beach-image" style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1521309033026-f3438b7c4264?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60);">
        </div>
        <div class="card-beach-infos">
            <div class="card-title space_between width100 padding1">
              <h2>Plage <%=beach.name%></h2>
              <% team = Team.find_by(calendar: @date, beach: beach) %>
              <div class="card-links">
                <% if team.nil?  %>

                    <%= link_to raw('<i class="fas fa-plus-circle"></i>Créer léquipe'),  new_calendar_beach_team_path(@date, beach, team) %>

                <% else %>
                    <% if policy(team).edit? %>
                      <%= link_to raw('<i class="fas fa-plus-circle"></i>Modifier léquipe'),   edit_calendar_beach_team_path(team.calendar, team.beach, team) %>
                     <% end %>
                     <% if policy(team).destroy? %>
                      <%= link_to raw('<i class="fas fa-plus-circle"></i>Supprimer léquipe'),   calendar_beach_team_path(team.calendar, team.beach, team), method: :delete %>
                      <% end %>
                <% end %>
              </div>
            </div>

          <% unless team.nil? %>
            <div class="card-lifeguards space_between width100 padding1">
              <% head_lifeguards = HeadLifeguard.find_by(team: team) %>
              <div class="lifeguard-profile">
                  <%= image_tag(head_lifeguards.user.avatar_url, class: "avatar") %>
                  <%= head_lifeguards.user.full_name %>
              </div>
              <% lifeguards = TeamLifeguard.where(team: team) %>
                <% lifeguards.each do |lifeguard| %>
                <div class="lifeguard-profile">
                  <%= image_tag(lifeguard.user.avatar_url, class: "avatar") %>
                  <%= lifeguard.user.full_name %>
                  </div>
              <% end%>
            </div>
          <% end %>
        </div>
       </div>
    </div>
  <% end %>
</div>
